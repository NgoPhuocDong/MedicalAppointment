@model IEnumerable<MedicalAppointment.Models.ApplicationUser>

    <div class="container">
        <div class="row">
            <div class="col-md-4 bg-danger">
                Lọc
            </div>
            <div class="col-md-8">
                <h3 class="text-center">Bác sĩ</h3>
                <hr />
                <div class="container px-5 pb-3">
                    <h4 class="text-primary">Nguyễn Bá Hợp</h4>
                    <div class="row">
                        <div class="col-md-3 text-center">
                            <img class="w-100 border" src="https://www.phongkhamtaman.com/data/Product/nguyen-ba-hop.jpg" />
                            <a class="btn btn-outline-primary mt-2">Xem chi tiết</a>
                        </div>
                        <div class="col-md-5">
                            <h4>Chuyên khoa:</h4>
                            <p>Khoa nội tổng hợp</p>
                            <h4>Chuyên môn:</h4>
                            <p>Tốt nghiệp đại học Y Dược</p>


                        </div>
                        <div class="col-md-4">
                            <h4>Đã khám và điều trị:</h4>
                            <p><span class="text-danger">792</span> Bệnh nhân</p>
                            <h4>Đánh giá: </h4>
                        </div>
                    </div>
                </div>
                @foreach (var item in Model)
                {
                    <hr />
                    <div class="container px-5 pb-3">
                        <h4 class="text-primary">@item.FullName</h4>
                        <div class="row ">
                            <div class="col-md-3 text-center">
                                @if (item.Image == null)
                                {
                                    <img class="w-100 h-80 border" src="https://my.clevelandclinic.org/assets/imgs/doctor-photo.jpg" />
                                }
                                else
                                {
                                    <img class="w-100 h-80 border" src="~/images/profile/@item.Image" />
                                }
                                <a class="btn btn-outline-primary mt-2">Xem chi tiết</a>
                            </div>
                            <div class="col-md-5">
                                <h4>Chuyên khoa:</h4>
                                <p>Khoa nội tổng hợp</p>
                                <h4>Chuyên môn:</h4>
                                <p>Tốt nghiệp đại học Y Dược</p>
                            </div>
                            <div class="col-md-4">
                                <h4>Đã khám và điều trị:</h4>
                                <p><span class="text-danger">792</span> Bệnh nhân</p>
                                <h4>Đánh giá: </h4>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>
